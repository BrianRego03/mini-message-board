<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <h1><%= title %></h1>
        <% for(let i=0; i< messages.length ; i++){ %>
            <div>
                <h2>
                    <a href="/messages/<%= messages[i].id %>">
                
                        <%= messages[i].title %>
                
                    </a>
                </h2>
                <p>From: <%= messages[i].username %>
                </p>
                <p>Received: <%= messages[i].added %>
                </p>
            </div>
        <% } %>    
        <div><a href="/new">Create new message</a></div>

    </body>
</html>